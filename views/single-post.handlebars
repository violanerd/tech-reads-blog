<article class="post">
    <div class="title">
        <h4>{{post.title}}</h4><span>Posted by {{post.user.username}} on {{format_date post.createdAt}}</span>
    </div>
    <div class="post-content">
        {{post.post_content}}
    </div>
</article>

<div class="comments">
    <article class="comment">
        <div class="top-bar">Comments</div><!-- got rid of  hr-->
        {{#each post.comments}}
        <div class="comment-text">
            {{comment_text}}
        </div>
        <div class="comment-author">
            --{{user.username}}, {{format_date createdAt}}
        </div>
        {{/each}}
    </article>
</div>

{{#if loggedIn}}
<form class="comment-form">
    <article class="comment">
        <div class="top-bar">Enter Your Comment</div><!-- got rid of article, experimenting wiht hr-->
        <textarea name="comment-body"></textarea>
        <button type="submit">Add Comment</button>
        
    </article>
</form>
<script src="/js/comment.js"></script>
{{/if}}